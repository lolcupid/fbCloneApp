<% include ../partials/header %>

<div class="container">
  <div class="col-md-8 col-sm-12 mx-auto">
    <form action="/blog/<%= blog._id %>?_method=PUT", method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" value="<%= blog.title %>" id='title' name='blog[title]'>
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        <input type="text" class="form-control" value="<%= blog.image %>" id='image' name='blog[image]'>
      </div>
      <div class="form-group">
        <label for="post">Post</label>
        <textarea class="form-control" id="post" rows="3" placeholder="Say here" name='blog[post]'><%= blog.post %></textarea>
      </div>
      <input type="submit" class="btn btn-success btn-block" value='Done'>
    </form>
    <a href="/blog/<%= blog._id %>" class="btn btn-outline-secondary btn-block mt-3"><i class="fas fa-chevron-circle-left"></i> Back</a>
  </div>
</div>

<% include ../partials/footer %>
